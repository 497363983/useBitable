{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@qww0302/use-bitable": [
        "src/index.ts"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./.vitepress/**/*.vue",
    "./src/**/*.test.ts",
  ],
  "exclude": [
    "node_modules/**",
    "dist",
    "./src/**/_*/**/*.ts",
    "**/semi-foundation/**/*.ts",
  ]
}